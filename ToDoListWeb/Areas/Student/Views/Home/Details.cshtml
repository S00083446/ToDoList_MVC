@model MoreDetails

<form method="post">
        <div class="card  container pt-4">
            <div class="card-header bg-primary text-light ml-0  row ">
                <div class="col-12 col-md-6">
                    <h1 class="text-white-50">@Model.Detail.Description</h1>
                    <p class="text-warning">@Model.Detail.Location</p>
                </div>
                <div class="col-12 col-md-6 text-end pt-4">
                    @*<span class="badge bg-info pt-2" style="height:30px;">CoverType</span>*@
                    <span class="badge bg-warning pt-2" style="height:30px;">@Model.Detail.Subjects.Name</span>
                </div>
            </div>
            <div class="card-body row container">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">

                         @*   <div class="row pl-2">
                                <h5 class="text-muted">Description</h5>
                            </div>*@
                            <div class="row pl-2">
                                <h5 class="text-muted pb-2">Location : @Model.Detail.Location<strike>$$$</strike></h5>
                            </div>
                            <div class="row text-center pl-2">
                                <div class="p-1 col-2 bg-secondary border-bottom">
                                    <div>Start Date : @Model.Detail.StartDate</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary border-bottom">
                                    <div>End Date : @Model.Detail.EndDate</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary border-bottom">
                                    <div>Start Time : @Model.Detail.StartTime</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary border-bottom">
                                    <div>End Time : @Model.Detail.EndTime</div>
                                </div>
                                 <div class="p-1 col-2 bg-secondary border-bottom">
                                    <div>Room Name : @Model.Detail.RoomName</div>
                                </div>
                                 <div class="p-1 col-2 bg-secondary border-bottom">
                                    <div>Notes : @Model.Detail.Notes</div>
                                </div>
                                 <div class="p-1 col-2 bg-secondary border-bottom">
                                    <div>% of Total Marks : @Model.Detail.PercentageOfTotalMarks</div>
                                </div>
                                 <div class="p-1 col-2 bg-secondary border-bottom">
                                    <div>Number of Participants @Model.Detail.NumberOfParticpants</div>
                                </div>
                                 <div class="p-1 col-2 bg-secondary border-bottom">
                                    <div>Images @Model.Detail.ImageUrl</div>
                                </div>

                            </div>
                           
                            <div class="row pl-2">
                                <p class="text-secondary">Description : @Model.Detail.Description</p>
                            </div>
                            
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="@Model.Detail.ImageUrl" width="100%" class="rounded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a class="btn btn-success form-control " style="height:50px;" asp-action="Index">Back to Home</a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">
                        <button type="submit" value="Add to Cart" class="btn btn-primary form-control" style="height:50px;">Add to Cart</button>
                    </div>
                </div>
            </div>
        </div>
</form>
