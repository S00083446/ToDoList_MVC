@model ToDoListModels.ViewModels.MoreDetailsVM
<form method="post">
    <br />
    <div class="container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0">
                <div class="row">
                    <div class="col-6  pt-2">
                        <i class="fa fa-shopping-cart"></i> &nbsp;
                        List of ToDos
                    </div>
                    <div class="col-6 text-end">
                        <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-info btn-sm">Continue Shopping</a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                @foreach (var item in Model.ToDoList)
                {
                    <div class="row">
                        <div class="d-none d-lg-block col-lg-1 text-center py-2">
                            <img src="@item.Detail.ImageUrl" class="rounded" width="100%" />
                        </div>
                        <div class="col-12 col-lg-6 pt-md-3">
                            <h5><strong>@(@item.Detail.EndDate - @item.Detail.StartDate)</strong></h5>
                            <p><small>@Html.Raw(item.Detail.Description)</small></p>
                            <p>@item.Detail.StartDate</p>
                            <p>@item.Detail.EndDate</p>
                            <p>@item.Detail.StartTime</p>
                            <p>@item.Detail.EndTime</p>
                            <p>@item.Detail.Notes</p>
                            <p>@item.Detail.DaysUntilEvent</p>
                            <p>@item.Detail.PercentageOfTotalMarks</p>
                            <p>@item.Detail.Location</p>
                            <p>@item.Detail.RoomName</p>


                            <h6> @item.Detail.Cost.ToString("c") </h6>
                        </div>
                    </div>

                    <div class="col-12  col-lg-5 text-center row">
                      @*  <div class="col-4 text-md-right pt-4">
                            <h6>@item.Detail</h6>
                        </div>*@


                        <div class="col-2 col-sm-4 col-lg-2 text-right pt-2">
                            <a asp-action="remove" asp-route-toDoId="@item.Id" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </div>
                <hr />
                }

        </div>

        <div class="card-footer">
            <div class="card-footer row">
                <div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">
                    <a asp-action="Summary" class="btn btn-success form-control">Summary</a>
                </div>
            </div>
        </div>
    </div>
    </div>
</form>
